<p>post-new.hbs</p>

<div class="container">
    <h1>New Rental</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input class="form-control" value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input class="form-control" value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input class="form-control" value=body id="body"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input class="form-control" value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input class="form-control" value=image id="image"}}
        </div>

        <button class="btn btn-success" {{action 'save'}}>Save</button>
      </form>
    </div>
</div>
