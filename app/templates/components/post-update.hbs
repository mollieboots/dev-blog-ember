<p>post-update.hbs</p>

<div class="container">
  <form>
  <h3>Edit Form</h3>
  <div class="form-group">
    <label for="title">Title</label>
    {{input class="form-control" value=title id="title" placeholder=post.title}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input class="form-control" value=author id="author" placeholder=post.author}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{input class="form-control" value=body id="body" placeholder=post.body}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=date id="date" placeholder=post.date}}
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    {{input class="form-control" value=image id="image" placeholder=post.image}}
  </div>
  <button class="btn btn-success" {{action 'updatePost' post}}>Update</button>
  </form>
</div>
